<div id="add-snippet" class="container-fluid">
	<h1>New Snippet</h1>
	
	<%= form_for @snippet, url: add_path, html: {class: "add-snippet-form col-sm-4 col-xs-12"} do |f| %>
        <%= f.text_field :title, :value => 'Hi' %>
        <%= f.check_box :private %>

        <!--Hardcoded for trying purposes.-->
        <div class="files">
            <div class="file">
                <input type="textbox" placeholder="File name" name="snippet_files[][filename]" value="duck">
                <div>Content</div>
                <textarea name="snippet_files[][content]">duckcontent</textarea>
                <input type="hidden" name = "snippet_files[][language]" value="text">
            </div>

            <div class="file">
                <input type="textbox" placeholder="File name" name="snippet_files[][filename]" value="duck2.txt">
                <div>Content</div>
                <textarea name="snippet_files[][content]">duck2content</textarea>
                <input type="hidden" name = "snippet_files[][language]" value="text">
            </div>

            <div class="file">
                <input type="textbox" placeholder="File name" name="snippet_files[][filename]" value="">
                <div>Content</div>
                <textarea name="snippet_files[][content]">duck3content</textarea>
                <input type="hidden" name = "snippet_files[][language]" value="text">
            </div>

        </div>
        <%= button_tag "Add file", id: "add-snippet-file-btn", type: "button" %>
        <%= f.submit "Create Snippet" %>
    <% end %>

</div>
