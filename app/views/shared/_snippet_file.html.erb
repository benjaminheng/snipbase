<div class="file">
    <div class="file-metadata container-fluid">
        <button class="close" type="button" style="display: none">Ã—</button>
        <div class="col-xs-6 col-sm-5">
            <%= text_field_tag "snippet_files[][filename]", defined?(file)? file.filename : "" , placeholder: "File name", class: "file-name" %>
        </div>
        <div class="dropdown col-xs-5">
            <input class="snippet-language" type="hidden" name = "snippet_files[][language]" value=<%= defined?(file)? file.language : "text" %>> </input>
            <button class="btn btn-small snippet-list dropdown-toggle" data-toggle="dropdown">
                <i>Language: </i>
                <span class="snippet-language-caption">
                    Text
                </span>
            </button>

            <%= render 'shared/languages_list' %>

        </div>
    </div>
    <div class="snippet-editor container-fluid" data-submit="true">
        <%= text_area_tag "snippet_files[][content]", defined?(file)? file.content : "" , placeholder: "Content", class:"snippet-textarea", rows:"15" %>
    </div>
</div>
